{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<h1>My Articles</h1>

    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
                <tr>
                    <th>Article Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}

                    <tr>
                        <td>
                            {{ article.title }}
                        </td>
                       <td>
                            <a href="/article/{{ article.id }}" class="btn btn-dark">Read</a>
                            <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">x</a>
                        </td>
                    </tr>

                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No articles to display</p>
    {% endif %}

    {% block javascripts %}
        <script src="/js/main.js"></script>
    {% endblock %}

{% endblock %}